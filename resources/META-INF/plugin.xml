<idea-plugin>
  <id>org.stellar.intellij.plugin</id>
  <name>Stellar</name>
  <version>1.0</version>
  <!--<vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor> -->

  <description><![CDATA[
    <p>Intellij Support for Stellar based projects</p>
    ]]></description>

  <change-notes><![CDATA[
        <b>Version 0.1</b>
        <ul>
           <li>Basic Stellar SDK Support</li>
        </ul>
    ]]>
  </change-notes>

  <depends>com.intellij.modules.java</depends>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>
  <depends>JavaScript</depends>
  <idea-version since-build="145.0"/>


  <extensions defaultExtensionNs="com.intellij">
    <!--<moduleBuilder builderClass="org.stellar.tools.project.StellarJavaModuleBuilder"/>-->
    <projectTemplatesFactory implementation="org.stellar.tools.project.StellarTemplatesFactory"/>
    <projectService serviceImplementation="com.intellij.javascript.nodejs.interpreter.NodeJsInterpreterManager"/>

  </extensions>

  <actions>
    <group id="StellarGroup" text="Stellar" popup="true" icon="/stellaricon.png">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
      <action class="org.stellar.tools.actions.Concepts" id="org.stellar.tools.actions.Concepts" text="Concepts" description="Stellar Concepts" icon="/help.png"/>
      <action id="StellarSearch" class="org.stellar.tools.actions.GTSearch" text="Galactic Talk Search" description="Search on  Galactic Talk" icon="/search.png"/>
    </group>

    <!--<group id="StellarConceptGroup" text="Concepts" popup="true">-->
      <!--<add-to-group group-id="StellarGroup" anchor="first"/>-->

  <!--</group>-->




  </actions>

</idea-plugin>